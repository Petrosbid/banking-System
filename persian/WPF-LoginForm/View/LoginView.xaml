<Window x:Class="BankSystem.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem.View"
        mc:Ignorable="d"
        Title="Bank System" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown" Icon="/View/bank_2830284.png">

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/View/[freepicdownloader.com]-people-taking-out-money-from-bank-concept-illustration-large (1).jpg"
                        Stretch="Fill"/>
        </Border.Background>

        <Border CornerRadius="10"                    
            BorderThickness="2"
            Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF000B58" Offset="0"/>
                    <GradientStop Color="#FF4DA1A9" Offset="0.838"/>
                    <GradientStop Color="#FFFFF4B7" Offset="1"/>
                    <GradientStop Color="#FF006A67" Offset="0.543"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush EndPoint="1,0" StartPoint="0,1">
                    <GradientStop Color="#FF222831" Offset="0"/>
                    <GradientStop Color="#FFEEEEEE" Offset="0.955"/>
                    <GradientStop Color="#FF0A858D" Offset="0.745"/>
                    <GradientStop Color="#FF393E46" Offset="0.223"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ورود به بانکداری"
                               Foreground="DarkGray"
                               FontFamily="Book Antiqua"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button x:Name="btnMinimize"                           
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Click="btnMinimize_Click" Margin="728,-11,13,-9" Width="50" Height="50" Grid.ColumnSpan="3">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <Button x:Name="btnClose"                          
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnClose_Click" Width="50" Height="50" Grid.ColumnSpan="3" Margin="13,-11,-8,-9" Background="Red">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="220"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0,35,0,0">

                    <Image Source="/View/bank_2830284.png"
                           Width="100" Height="100"/>
                    <TextBlock
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Width="170" Text="سیستم بانکداری"/>

                    <TextBlock
                               Foreground="LightGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,0,0" Height="33" Text="به سیستم بانکداری بانک هوشمند خوش آمدید."/>


                    <TextBlock
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,35,0,0"><Run FlowDirection="RightToLeft" Language="fa-ir" Text="نام کاربری"/></TextBlock>

                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0" AutomationProperties.Name="txtUser" AutomationProperties.IsRequiredForForm="True">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,15,0,0"><Run FlowDirection="RightToLeft" Language="fa-ir" Text="رمز عبور"/></TextBlock>

                    <PasswordBox x:Name="txtPass"
                        
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0" AutomationProperties.IsRequiredForForm="True">

                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Images/key-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"/>
                    <Button x:Name="btnLogin"                          
                            BorderThickness="0"
                            Content="ورود"
                            Foreground="White"
                            FontSize="18"
                            FontFamily="Arial Black"
                            Cursor="Hand"
                            Click="btnLogin_Click" Height="55">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
                <TextBlock x:Name="emptypass"
                    Foreground="Red"
                    FontSize="15"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                               Margin="0,405,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Hidden" FlowDirection="RightToLeft" Text="sdaga" Visibility="Hidden" RenderTransformOrigin="0.5,0.833"/>
                <TextBlock x:Name="emptyLog"
                    Foreground="#FF56FF00"
                    FontSize="15"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                             
                    Margin="0,405,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Hidden" FlowDirection="RightToLeft" Text="sdaga" Visibility="Hidden" RenderTransformOrigin="0.5,0.833" AutomationProperties.Name=""/>
                <ComboBox x:Name="banks" Margin="338,484,338,10" Grid.Row="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" FlowDirection="RightToLeft"/>
                <TextBlock
                        Foreground="LightGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                               Margin="288,450,288,37" Grid.Row="1"
                               ><Run FlowDirection="RightToLeft" Language="fa-ir" Text="در صورت ورود به عنوان کاربر بانک خود را انخاب کنید"/></TextBlock>

            </Grid>

        </Border>

    </Border>

</Window>
